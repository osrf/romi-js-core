{
  "name": "@osrf/romi-js-core-interfaces",
  "version": "0.0.2",
  "description": "library to interface with components in RoMi",
  "scripts": {
    "build": "npm run build:gen && tsc && webpack",
    "build:gen": "python3 bin/gentypes.py lib/core-msgs rmf_door_msgs rmf_lift_msgs rmf_fleet_msgs rmf_task_msgs rmf_dispenser_msgs rmf_workcell_msgs building_map_msgs",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "clean": "tsc --build --clean && rm -rf build lib/core-msgs bundle",
    "test": "jasmine",
    "test:browser": "karma start --single-run",
    "lint": "eslint --ext ts,js lib spec transport scripts",
    "docs": "rm -rf docs && typedoc",
    "release": "npx standard-version -a"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/osrf/romi-js-core-interfaces"
  },
  "author": "Teo Koon Peng <koonpeng@openrobotics.org>",
  "license": "Apache-2.0",
  "dependencies": {
    "eventemitter3": "^4.0.0"
  },
  "devDependencies": {
    "@types/jasmine": "^3.5.4",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "jasmine": "^3.5.0",
    "karma": "^5.0.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^3.1.1",
    "standard-version": "^8.0.2",
    "typedoc": "^0.15.8",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "browser": "bundle/romi-js-core-interfaces.js",
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "/transport/**/*.js",
    "/transport/**/*.d.ts",
    "/bundle/",
    "/bin/",
    "/templates/"
  ],
  "bin": {
    "gentypes": "bin/gentypes.py"
  }
}
